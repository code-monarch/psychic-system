{
  "extends": "@emtech/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/ui/*": ["./src/ui/*"],
      "@/redux/*": ["./redux/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/public/*": ["./public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/**/**/**/**/*.ts",
    "**/**/**/**/**/*.tsx",
    ".next/types/**/*.ts",
    "dist/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
