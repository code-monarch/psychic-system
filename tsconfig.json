{
  "compilerOptions": {
    "diagnostics": true,
    "extendedDiagnostics": true,
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "isolatedModules": true
  },
  "include": [
    "./**/*",
    "./src/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "webpack.config.js",
    "./*/tests/*.spec.[ts, tsx]",
  ]
}
